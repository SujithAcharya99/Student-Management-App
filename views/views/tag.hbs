<!DOCTYPE html>
<html>

<head>

  <title>Student-Management App</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="icon" href="/photo/logo.png">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css"
    integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

</head>

<body>
  <div class="main-content">
    {{!-- <div class="row"> --}}
    <div class="col-md-6 offset-md-3" style="background-color: #fff;margin-top: 25px;padding:20px;">

      {{>header}}
      <h1>Create Questions for test</h1>
      <form action="/mcq/{{teacher_id}}" method="POST">
        <label>studentName</label>
        <input id="studentName" type="text" name="studentName" placeholder="studentName" required>
        <label>Subject </label>
        <input id="subject" type="text" name="subject" placeholder="subject" value="{{course.subject}}" required>
        <label>teacherName </label>
        <input id="teacherName" type="text" name="teacherName" placeholder="teacherName" value="{{course.teacherName}}"
          required>
          <label>Enter no of question to Add </label>
        <input id="noOfQuestion" type="text" name="noOfQuestion" placeholder="noOfQuestion" required>

          <div id="demo"></div>

<script>
var x ="", i;
for (i=1; i<=3; i++) {
  x = x + "<h2>" + i + "</h2> <input id='mcq_question' type='text' name='mcq_question' placeholder='mcq_question' required><label>options </label> <input id='options' type='text' name='options' placeholder='option 1' required> <input id='options' type='text' name='options' placeholder='option 2' required> <input id='options' type='text' name='options' placeholder='option 3' required> <input id='options' type='text' name='options' placeholder='option 4' required> <label>answer </label> <input id='answer' type='text' name='answer' placeholder='answer' required>";
}
document.getElementById("demo").innerHTML = x;
</script>
        <button type="submit">SUBMIT</button>
      </form>
      {{>footer}}
    </div>

  </div>
  </div>
</body>

</html>
